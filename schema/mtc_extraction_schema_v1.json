{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Mill Test Certificate v1",
    "type": "object",
    "required": [
        "document",
        "traceability",
        "chemical_composition",
        "mechanical_properties"
    ],
    "properties": {
        "document": {
            "type": "object",
            "required": [
                "certificate_number",
                "issuing_date",
                "standard"
            ],
            "properties": {
                "certificate_number": {
                    "type": "string"
                },
                "issuing_date": {
                    "type": "string",
                    "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                },
                "standard": {
                    "type": "string",
                    "description": "e.g. EN 10204 3.1"
                },
                "customer": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "order_number": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            }
        },
        "traceability": {
            "type": "object",
            "properties": {
                "heat_number": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Primary heat number (if single heat certificate)"
                },
                "consignment_number": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "vessel_name": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "lot_number": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            }
        },
        "product": {
            "type": "object",
            "properties": {
                "size": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "quality": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "production_process": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            }
        },
        "chemical_composition": {
            "type": "array",
            "description": "Array of chemical composition data, one entry per heat number",
            "items": {
                "type": "object",
                "required": [
                    "heat_number",
                    "elements"
                ],
                "properties": {
                    "heat_number": {
                        "type": "string",
                        "description": "Heat/Cast number for this batch"
                    },
                    "elements": {
                        "type": "object",
                        "description": "Chemical elements and their percentages",
                        "properties": {
                            "C": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "Si": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "Mn": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "P": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "S": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "Ni": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "Cr": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "Mo": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "Cu": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "V": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "N": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "B": {
                                "type": [
                                    "number",
                                    "null"
                                ]
                            },
                            "Ce": {
                                "type": [
                                    "number",
                                    "null"
                                ],
                                "description": "Carbon equivalent"
                            }
                        }
                    }
                }
            }
        },
        "mechanical_properties": {
            "type": "array",
            "description": "Array of mechanical test results, one entry per test sample",
            "items": {
                "type": "object",
                "required": [
                    "heat_number"
                ],
                "properties": {
                    "heat_number": {
                        "type": "string",
                        "description": "Heat number for this test sample"
                    },
                    "test_sample": {
                        "type": [
                            "integer",
                            "null"
                        ],
                        "description": "Sample number (1, 2, 3, 4, etc.)"
                    },
                    "weight_kg_per_m": {
                        "type": [
                            "number",
                            "null"
                        ],
                        "description": "Weight per meter in kg/m"
                    },
                    "cross_sectional_area_mm2": {
                        "type": [
                            "number",
                            "null"
                        ],
                        "description": "Cross-sectional area in mmÂ²"
                    },
                    "yield_point_mpa": {
                        "type": [
                            "number",
                            "null"
                        ],
                        "description": "Yield point (Re) in MPa"
                    },
                    "tensile_strength_mpa": {
                        "type": [
                            "number",
                            "null"
                        ],
                        "description": "Tensile strength (Rm) in MPa"
                    },
                    "rm_re_ratio": {
                        "type": [
                            "number",
                            "null"
                        ],
                        "description": "Rm/Re ratio"
                    },
                    "percentage_elongation": {
                        "type": [
                            "number",
                            "null"
                        ],
                        "description": "Percentage elongation at Lo=5d0"
                    },
                    "agt_percent": {
                        "type": [
                            "number",
                            "null"
                        ],
                        "description": "Agt percentage"
                    }
                }
            }
        },
        "approval": {
            "type": "object",
            "properties": {
                "certificate_of_approval_number": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "form_number": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "cares_approved": {
                    "type": [
                        "boolean",
                        "null"
                    ]
                }
            }
        }
    }
}